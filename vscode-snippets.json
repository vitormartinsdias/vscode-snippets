  "Quarto PDF Article": {
    "prefix": "quartopdf",
    "body": [
      "---",
      "title: \"$1\"",
      "author: \"$2\"",
      "date: \"`r Sys.Date()`\"",
      "date-format: MM-DD-YYYY",
      "fig-align: center",
      "tbl-align: center",
      "fig-cap-location: top",
      "tbl-cap-location: top",
      "format: pdf",
      "documentclass: article",
      "papersize: letter",
      "fontsize: 12pt",
      "urlcolor: blue",
      "linkcolor: black",
      "geometry: margin=1in",
      "include-in-header:",
      "  text: |",
      "    \\usepackage[bottom]{footmisc}",
      "    \\usepackage{setspace}",
      "    \\doublespacing",
      "    \\usepackage{parskip}",
      "    \\setlength{\\parindent}{20pt}",
      "    \\usepackage{sectsty}",
      "    \\sectionfont{\\fontsize{12}{15}\\selectfont}",
      "    \\subsectionfont{\\fontsize{12}{15}\\selectfont}",
      "bibliography: /Users/vmartinsdias/Zotero/references.bib",
      "---",
      "",
      "Text can start here.",
      "",
      "$0"
    ],
    "description": "Quarto article with PDF output"
  },
  "Typst PDF Template": {
    "prefix": "typpdf",
    "body": [
      "#set page(",
      "  paper: \"us-letter\",",
      "  margin: (x: 1in, y: 1in),",
      "  numbering: \"1\"",
      ")",
      "",
      "#set text(",
      "  font: \"New Computer Modern\",",
      "  size: 12pt",
      ")",
      "",
      "#set par(",
      "  justify: true,",
      "  leading: 0.5em,",
      ")",
      "",
      "#show heading: set block(",
      "  above: 1.2em,",
      "  below: 1.2em)",
      "#show heading: set text(size: 12pt)",
      "",
      "#set enum(",
      "  full: true,",
      "  numbering: (..nums-arguments) => context {",
      "    let nums = nums-arguments.pos()",
      "    if nums.len() == 1 {",
      "      let thread-counter = counter(\"ex\")",
      "      thread-counter.step()",
      "      let thread-count = thread-counter.get().first() + 1",
      "      numbering(\"1.\", thread-count)",
      "    } else {",
      "      numbering(\"1.\", nums.last())",
      "    }",
      "  },",
      ")",
      "",
      "$0"
    ],
    "description": "Typst PDF document template"
  },
